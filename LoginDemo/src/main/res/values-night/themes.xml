<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Wechat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#424040</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wechat_green</item>
        <item name="colorSecondaryVariant">#99000000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SwitchTheme">
        <item name="colorControlActivated">@color/wechat_green</item>
    </style>

    <style name="ToastTheme">
        <item name="colorPrimary">#424040</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="IconTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.Wechat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/wechat_green</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>