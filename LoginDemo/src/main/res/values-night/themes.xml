<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 应用主要主题  -->
    <style name="Theme.Wechat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#2B2B2B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wechat_green</item>
        <item name="colorSecondaryVariant">#99000000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- 一些组件的主题 -->
    <style name="SwitchTheme">
        <item name="colorControlActivated">@color/wechat_green</item>
    </style>

    <style name="ToastTheme">
        <item name="colorPrimary">#424040</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="IconTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- 底部导航栏的主题 -->
    <!-- 文档在 https://material.io/components/bottom-navigation/android#bottom-navigation-bar  -->
    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Icon/Text label color (active) -->
        <item name="colorPrimary">@color/wechat_green</item>
        <!-- Icon/Text label color (inactive) -->
        <item name="colorOnSurface">@color/white</item>
        <!-- Container color -->
        <item name="colorSurface">?colorPrimaryVariant</item>
        <!--        <item name="rippleColor">@null</item>-->
    </style>

</resources>