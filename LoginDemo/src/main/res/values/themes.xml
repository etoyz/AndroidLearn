<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 应用主要主题  -->
    <style name="Theme.Wechat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#50000000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- 一些组件的主题 -->
    <style name="SwitchTheme">
        <item name="colorControlActivated">@color/wechat_green</item>
    </style>

    <style name="ToastTheme">
        <item name="colorPrimary">#70000000</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="IconTheme">
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- 一些页面的主题 -->
    <style name="Theme.Wechat.Settings" parent="Theme.Wechat">
        <item name="colorPrimary">@color/gray</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 底部导航栏的主题 -->
    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/wechat_green</item>
    </style>

</resources>